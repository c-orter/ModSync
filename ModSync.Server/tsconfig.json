{
	"compilerOptions": {
		"allowJs": true,
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"outDir": "tmp",
		"strict": true,
		"paths": {
			"@spt/*": ["./types/*"]
		},
		"types": ["vitest"]
	},
	"exclude": ["node_modules", "dist", "tmp"]
}
